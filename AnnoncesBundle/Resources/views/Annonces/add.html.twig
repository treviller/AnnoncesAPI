{% extends 'AnnoncesBundle::layout.html.twig' %}

{% block title %}
Ajouter une annonce
{% endblock %}


{% block body %}
	<div class=well>
        {{ form_start(form) }}
        
        {{ form_errors(form) }}
        
        {{ form_row(form.title) }}
        
        {{ form_row(form.content) }}
        
        {{ form_row(form.prix) }}
        
        {{ form_row(form.category) }}
        
        {{ form_row(form.city) }}
        
         <ul id="photos-add-mode" class="list-group" data-prototype="{{ form_widget(form.photos.vars.prototype)|escape('html_attr') }}">
        {% for photo in form.photos %}
      	    <li class="list-group-item row ">
       	        {{ form_errors(photo) }}
       	        {{ form_widget(photo) }}
        	</li>
        {% endfor %}
        </ul>
        
        {{ form_rest(form) }}
        
        {{ form_end(form) }}
	</div>
{% endblock %}

{% block scripts %}
	<script src="{{ app.request.basepath }}/bundles/annonces/jquery/jquery.min.js"></script>
	<script src="{{ app.request.basepath }}/bundles/annonces/jquery-ui/jquery-ui.min.js"></script>
	<script src="{{ app.request.basepath }}/bundles/annonces/scripts/geonames-request.js"></script>
	<script src="{{ app.request.basepath }}/bundles/annonces/scripts/addPhoto.js"></script>
{% endblock %}
