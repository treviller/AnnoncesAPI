{% extends 'AnnoncesBundle::layout.html.twig' %}

{%  block title %}
Connexion
{% endblock %}

{% block body %}
    <div class="well">
        <form path="{{ path('users_signin') }}" method="post">
            <div class="form-group col-lg-6">
                <label class="control-label" for="username">Username : </label>
                <input class="form-control" type="text" name="_username"/>
            </div>
            <div class="form-group col-lg-6">
                <label class="control-label" for="password">Password : </label>
                <input class="form-control" type="password" name="_password"/>
            </div>

            <div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            </div>

            <div class="form-group">
                <input class="btn btn-default" type="submit" value="Connexion"/>
            </div>
        </form>
    </div>
{% endblock %}
